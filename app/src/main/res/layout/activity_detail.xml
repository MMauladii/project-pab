<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434242"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iv_logo"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nama"
            android:text="Nama Universitas"
            android:padding="6dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alamat"
            android:text="Alamat Universitas"
            android:textAlignment="center"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:justificationMode="inter_word"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Universitas"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_title_deskripsi"
            style="@style/TextAppearance.AppCompat.Large"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_deskripsi"
            android:textColor="#FFFFFF"
            android:text="Deskripsi Universitas Isi"
            android:layout_marginTop="15dp"
            android:textSize="18dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_lokasi"
            android:text="Lihat Lokasi"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>